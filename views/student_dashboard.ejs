<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/student_dashboard.js" defer></script>
</head>

<body>
    <div class="header">
        <div class="title">
            <h1>Internship Management</h1>
        </div>
        <div class="nav-div">
            <nav>
                <a href="student_profile.html">Your Profile</a>
                <a href="/student/logout">Log out</a>
            </nav>
        </div>
    </div>

    <div class="dashboard-content">

        <!-- Filter Sidebar -->
        <div class="filter-sidebar">
            <div class="filter-group" id="company">
                <h3>Company</h3>
                <%companies.forEach((company) => {%>
                <label><input type="checkbox" value="<%=company.id%>" /> <%=company.name%></label>
                <%})%>
            </div>

            <div class="filter-group" id="type">
                <h3>Type</h3>
                <label><input type="checkbox" value="remote" /> Remote</label>
                <label><input type="checkbox" value="on-site" /> On-site</label>
            </div>

            <div class="filter-group">
                <h3>Duration</h3>
                <label><input type="checkbox" name="duration" value="3 Months" /> 3 Months</label>
                <label><input type="checkbox" name="duration" value="4 Months" /> 4 Months</label>
                <label><input type="checkbox" name="duration" value="6 Months" /> 6 Months</label>
            </div>
        </div>

        <!-- Main Content -->
        <div class="internships-section">
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Search internships..." />
            </div>

            <div class="internships-grid" id="internshipsContainer">
                <a href="student_internship.html">
                    <div class="internship-card">
                        <h3>Frontend Developer</h3>
                        <p><strong>Company:</strong> TechNova</p>
                        <p><strong>Location:</strong> Remote</p>
                        <p><strong>Duration:</strong> 3 Months</p>
                    </div>
                </a>
            </div>
        </div>

    </div>
</body>
</html>
