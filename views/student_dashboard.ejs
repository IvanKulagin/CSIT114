<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/student_dashboard.js" defer></script>
</head>

<body>
    <div class="header">
        <div class="title">
            <h1>Internship Management</h1>
        </div>
        <div class="nav-div">
            <nav>
                <a href="/student/applications">My Applications</a>
                <a href="/student/profile">Profile</a>
                <a href="/student/logout">Log out</a>
            </nav>
        </div>
    </div>

    <div class="dashboard-content">

        <!-- Filter Sidebar -->
        <div class="filter-sidebar">
            <div class="filter-group" id="company">
                <h3>Company</h3>
                <%companies.forEach((company) => {%>
                <label><input type="checkbox" value="<%=company.id%>" /> <%=company.name%></label>
                <%})%>
            </div>

            <div class="filter-group" id="type">
                <h3>Type</h3>
                <label><input type="checkbox" value="Remote" /> Remote</label>
                <label><input type="checkbox" value="On-site" /> On-site</label>
            </div>

            <div class="filter-group" id="type">
                <h3>Salary</h3>
                <input type="number" class="filter-text" id="salary" value="0" />
            </div>

            <div class="filter-group">
                <h3>Duration</h3>
                <div class="slider">
                    <input type="range" id="duration" min="1" max="12" value="12" />
                    <label for="duration"><span id="durationValue">12</span> Month(s)</label>
                </div>
            </div>
            <button class="clear-button" id="clear">Clear</button>
        </div>

        <!-- Main Content -->
        <div class="internships-section">
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Search internships..." />
            </div>

            <div class="internships-grid" id="internshipsContainer"></div>
        </div>

    </div>
</body>
</html>
